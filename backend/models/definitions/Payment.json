{
    "name": "Payment",
    "type": "object",
    "properties": {
        "tenant_id": {
            "type": "string",
            "description": "Reference to the Tenant"
        },
        "tenant_name": {
            "type": "string",
            "description": "Snapshotted tenant name"
        },
        "plan_id": {
            "type": "string",
            "description": "Reference to the SubscriptionPlan"
        },
        "plan_name": {
            "type": "string"
        },
        "amount": {
            "type": "number"
        },
        "currency": {
            "type": "string"
        },
        "razorpay_order_id": {
            "type": "string"
        },
        "razorpay_payment_id": {
            "type": "string"
        },
        "payment_status": {
            "type": "string",
            "enum": [
                "captured",
                "failed",
                "refunded"
            ],
            "default": "captured"
        },
        "billing_cycle": {
            "type": "string",
            "enum": [
                "monthly",
                "annual"
            ],
            "default": "monthly"
        },
        "payment_date": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "tenant_id",
        "plan_id",
        "amount",
        "razorpay_payment_id"
    ]
}