{
  "name": "SubscriptionPlan",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Plan name (e.g. Starter, Pro)"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the plan"
    },
    "monthly_price": {
      "type": "number",
      "description": "Cost per month"
    },
    "annual_price": {
      "type": "number",
      "description": "Cost per year"
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "description": "Currency code (USD, EUR, etc.)"
    },
    "features": {
      "type": "object",
      "properties": {
        "max_users": {
          "type": "number"
        },
        "max_workspaces": {
          "type": "number"
        },
        "max_projects": {
          "type": "number"
        },
        "max_storage_gb": {
          "type": "number"
        },
        "ai_assistant_enabled": {
          "type": "boolean"
        },
        "advanced_analytics_enabled": {
          "type": "boolean"
        }
      },
      "description": "Feature limits and flags"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether this plan is available for new subscriptions"
    },
    "sort_order": {
      "type": "number",
      "default": 0,
      "description": "Order to display in pricing table"
    }
  },
  "required": [
    "name",
    "monthly_price"
  ]
}